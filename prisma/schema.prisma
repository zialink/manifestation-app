generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql/sqlite, adjust as needed
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(cuid())
  email        String           @unique
  goals        Goal[]
  affirmations Affirmation[]
  hypnosis     Hypnosis[]
  imagination  Imagination[]
  suggestions  GoalSuggestion[]
}

model Goal {
  id           String           @id @default(cuid())
  title        String
  description  String?
  userId       String
  user         User             @relation(fields: [userId], references: [id])
  affirmations Affirmation[]
  hypnosis     Hypnosis[]
  imagination  Imagination[]
  suggestions  GoalSuggestion[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt // ðŸ‘ˆ restored
}

model Affirmation {
  id        String   @id @default(cuid())
  content   String
  goalId    String?
  goal      Goal?    @relation(fields: [goalId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // ðŸ‘ˆ restored
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Hypnosis {
  id        String   @id @default(cuid())
  content   String
  goalId    String?
  goal      Goal?    @relation(fields: [goalId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // ðŸ‘ˆ restored
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Imagination {
  id        String   @id @default(cuid())
  content   String
  goalId    String?
  goal      Goal?    @relation(fields: [goalId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // ðŸ‘ˆ restored
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model GoalSuggestion {
  id           String   @id @default(cuid())
  type         String
  content      String
  suggestionId String
  goalId       String
  goal         Goal     @relation(fields: [goalId], references: [id])
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt // ðŸ‘ˆ restored
}
